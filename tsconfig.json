{
    "compilerOptions": {
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "target": "ES2022",
        "types": ["node"],
        "experimentalDecorators": true,
        "declaration": true
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
