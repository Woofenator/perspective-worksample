{
    "compilerOptions": {
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "target": "ESNext",
        "types": ["node"]
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
